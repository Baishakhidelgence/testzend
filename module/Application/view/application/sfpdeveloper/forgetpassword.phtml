<script type="text/javascript">
        function save()
        {
        var basepath = window.location.protocol+"//" + window.location.host;    
        var username = $("#username").val();
        if (username == '')
        {
            $('#blank').show();
            $('#error').hide();
            $('#correct').hide();
            return false;
        }
        $.ajax({
            type:'POST',
            data:{user:username},
            url:basepath+"/sfpdeveloper/checkuser",
              success:function(data){       
                if(data == 1){
                    $('#correct').show();
                      $('#error').hide();
                      $('#blank').hide();
                }
                else{
                      $('#error').show();
                        $('#correct').hide();
                        $('#blank').hide();
                }
            }
        }); 
        }   
