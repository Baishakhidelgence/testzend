function submitFunction()
{
         var newPass=$("#newpass").val();
         var confirmPass=$("#conpass").val();
         if (newPass==null || confirmPass=="")
         {    
         $('#blank').css('display','block');
         $('#error').css('display','none');
         $('#passmsg').css('display','none');
         return false;
         }   
         else if (newPass!=confirmPass)
         {    
         $('#error').css('display','block');
         $('#passmsg').css('display','none');
         $('#blank').css('display','none');
         return false;
         }
         else if (newPass.length<8||newPass.length>20)
         {    
            $('#passmsg').css('display','block');
            $('#error').css('display','none');
            $('#blank').css('display','none');
            return false;
         }
        else
        {
          $('#submitbutton_check').trigger('click');
          $('#submitbutton_check').show();
          $('#passwordCheck').hide();
          
        }
}
